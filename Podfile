platform :ios, '15.0' # Minimum deployment target

target 'temp' do
  use_frameworks!

  # Firebase Core (includes Firebase Analytics)
  pod 'Firebase/Core'

  # Firebase Authentication
  pod 'Firebase/Auth'

  # Firestore Database
  pod 'Firebase/Firestore'

  # Firebase Storage (for potential file or image uploads)
  pod 'Firebase/Storage'
end
